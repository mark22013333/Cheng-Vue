<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.shop.mapper.ShopBannerMapper">

    <resultMap type="com.cheng.shop.domain.ShopBanner" id="ShopBannerResult">
        <id     property="bannerId"     column="banner_id"/>
        <result property="title"        column="title"/>
        <result property="imageUrl"     column="image_url"/>
        <result property="mobileImage"  column="mobile_image"/>
        <result property="linkType"     column="link_type"/>
        <result property="linkValue"    column="link_value"/>
        <result property="position"     column="position"/>
        <result property="sortOrder"    column="sort_order"/>
        <result property="startTime"    column="start_time"/>
        <result property="endTime"      column="end_time"/>
        <result property="status"       column="status"/>
        <result property="createBy"     column="create_by"/>
        <result property="createTime"   column="create_time"/>
        <result property="updateBy"     column="update_by"/>
        <result property="updateTime"   column="update_time"/>
    </resultMap>

    <sql id="selectBannerVo">
        select banner_id, title, image_url, mobile_image, link_type, link_value, position,
               sort_order, start_time, end_time, status, create_by, create_time, update_by, update_time
        from shop_banner
    </sql>

    <select id="selectBannerList" parameterType="com.cheng.shop.domain.ShopBanner" resultMap="ShopBannerResult">
        <include refid="selectBannerVo"/>
        <where>
            <if test="title != null and title != ''">
                AND title like concat('%', #{title}, '%')
            </if>
            <if test="position != null and position != ''">
                AND position = #{position}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        order by sort_order asc, banner_id desc
    </select>

    <select id="selectBannerById" parameterType="Long" resultMap="ShopBannerResult">
        <include refid="selectBannerVo"/>
        where banner_id = #{bannerId}
    </select>

    <select id="selectActiveBanners" resultMap="ShopBannerResult">
        <include refid="selectBannerVo"/>
        where status = 'ENABLED'
          and position = #{position}
          and (start_time is null or start_time &lt;= now())
          and (end_time is null or end_time &gt;= now())
        order by sort_order asc
    </select>

    <insert id="insertBanner" parameterType="com.cheng.shop.domain.ShopBanner" useGeneratedKeys="true" keyProperty="bannerId">
        insert into shop_banner
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="imageUrl != null and imageUrl != ''">image_url,</if>
            <if test="mobileImage != null">mobile_image,</if>
            <if test="linkType != null and linkType != ''">link_type,</if>
            <if test="linkValue != null">link_value,</if>
            <if test="position != null and position != ''">position,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="imageUrl != null and imageUrl != ''">#{imageUrl},</if>
            <if test="mobileImage != null">#{mobileImage},</if>
            <if test="linkType != null and linkType != ''">#{linkType},</if>
            <if test="linkValue != null">#{linkValue},</if>
            <if test="position != null and position != ''">#{position},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            now()
        </trim>
    </insert>

    <update id="updateBanner" parameterType="com.cheng.shop.domain.ShopBanner">
        update shop_banner
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="mobileImage != null">mobile_image = #{mobileImage},</if>
            <if test="linkType != null">link_type = #{linkType},</if>
            <if test="linkValue != null">link_value = #{linkValue},</if>
            <if test="position != null">position = #{position},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            update_time = now()
        </trim>
        where banner_id = #{bannerId}
    </update>

    <delete id="deleteBannerById" parameterType="Long">
        delete from shop_banner where banner_id = #{bannerId}
    </delete>

    <delete id="deleteBannerByIds" parameterType="Long">
        delete from shop_banner where banner_id in
        <foreach item="bannerId" collection="array" open="(" separator="," close=")">
            #{bannerId}
        </foreach>
    </delete>

</mapper>
