<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.shop.mapper.ShopCategoryMapper">

    <resultMap type="com.cheng.shop.domain.ShopCategory" id="ShopCategoryResult">
        <id     property="categoryId"   column="category_id"/>
        <result property="parentId"     column="parent_id"/>
        <result property="name"         column="name"/>
        <result property="icon"         column="icon"/>
        <result property="bannerImage"  column="banner_image"/>
        <result property="sortOrder"    column="sort_order"/>
        <result property="status"       column="status"/>
        <result property="createBy"     column="create_by"/>
        <result property="createTime"   column="create_time"/>
        <result property="updateBy"     column="update_by"/>
        <result property="updateTime"   column="update_time"/>
    </resultMap>

    <sql id="selectCategoryVo">
        select category_id, parent_id, name, icon, banner_image, sort_order, status, create_by, create_time, update_by, update_time
        from shop_category
    </sql>

    <select id="selectCategoryList" parameterType="com.cheng.shop.domain.ShopCategory" resultMap="ShopCategoryResult">
        <include refid="selectCategoryVo"/>
        <where>
            <if test="parentId != null">
                AND parent_id = #{parentId}
            </if>
            <if test="name != null and name != ''">
                AND name like concat('%', #{name}, '%')
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        order by sort_order asc, category_id asc
    </select>

    <select id="selectCategoryById" parameterType="Long" resultMap="ShopCategoryResult">
        <include refid="selectCategoryVo"/>
        where category_id = #{categoryId}
    </select>

    <select id="selectCategoryByParentId" parameterType="Long" resultMap="ShopCategoryResult">
        <include refid="selectCategoryVo"/>
        where parent_id = #{parentId} and status = 'ENABLED'
        order by sort_order asc
    </select>

    <insert id="insertCategory" parameterType="com.cheng.shop.domain.ShopCategory" useGeneratedKeys="true" keyProperty="categoryId">
        insert into shop_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="parentId != null">parent_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="icon != null">icon,</if>
            <if test="bannerImage != null">banner_image,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="parentId != null">#{parentId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="icon != null">#{icon},</if>
            <if test="bannerImage != null">#{bannerImage},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            now()
        </trim>
    </insert>

    <update id="updateCategory" parameterType="com.cheng.shop.domain.ShopCategory">
        update shop_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="bannerImage != null">banner_image = #{bannerImage},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            update_time = now()
        </trim>
        where category_id = #{categoryId}
    </update>

    <delete id="deleteCategoryById" parameterType="Long">
        delete from shop_category where category_id = #{categoryId}
    </delete>

    <select id="countChildrenByParentId" parameterType="Long" resultType="int">
        select count(*) from shop_category where parent_id = #{parentId}
    </select>

    <select id="countProductsByCategoryId" parameterType="Long" resultType="int">
        select count(*) from shop_product where category_id = #{categoryId}
    </select>

</mapper>
