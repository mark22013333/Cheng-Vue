<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.system.mapper.SysMaterialAssetMapper">

    <resultMap type="SysMaterialAsset" id="SysMaterialAssetResult">
        <result property="assetId"      column="asset_id" />
        <result property="assetType"    column="asset_type" />
        <result property="originalName" column="original_name" />
        <result property="fileName"     column="file_name" />
        <result property="fileExt"      column="file_ext" />
        <result property="mimeType"     column="mime_type" />
        <result property="fileSize"     column="file_size" />
        <result property="durationMs"   column="duration_ms" />
        <result property="relativePath" column="relative_path" />
        <result property="status"       column="status" />
        <result property="remark"       column="remark" />
        <result property="createBy"     column="create_by" />
        <result property="createTime"   column="create_time" />
        <result property="updateBy"     column="update_by" />
        <result property="updateTime"   column="update_time" />
    </resultMap>

    <sql id="selectSysMaterialAssetVo">
        select asset_id, asset_type, original_name, file_name, file_ext, mime_type, file_size, duration_ms,
               relative_path, status, remark, create_by, create_time, update_by, update_time
        from sys_material_asset
    </sql>

    <select id="selectSysMaterialAssetById" parameterType="Long" resultMap="SysMaterialAssetResult">
        <include refid="selectSysMaterialAssetVo"/>
        where asset_id = #{assetId}
    </select>

    <select id="selectSysMaterialAssetList" parameterType="SysMaterialAsset" resultMap="SysMaterialAssetResult">
        <include refid="selectSysMaterialAssetVo"/>
        <where>
            <if test="assetType != null and assetType != ''">
                and asset_type = #{assetType}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="originalName != null and originalName != ''">
                and original_name like concat('%', #{originalName}, '%')
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="selectByTypeAndFileName" resultMap="SysMaterialAssetResult">
        <include refid="selectSysMaterialAssetVo"/>
        where asset_type = #{assetType}
          and file_name = #{fileName}
        limit 1
    </select>

    <insert id="insertSysMaterialAsset" parameterType="SysMaterialAsset" useGeneratedKeys="true" keyProperty="assetId">
        insert into sys_material_asset
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="assetType != null and assetType != ''">asset_type,</if>
            <if test="originalName != null and originalName != ''">original_name,</if>
            <if test="fileName != null and fileName != ''">file_name,</if>
            <if test="fileExt != null and fileExt != ''">file_ext,</if>
            <if test="mimeType != null and mimeType != ''">mime_type,</if>
            <if test="fileSize != null">file_size,</if>
            <if test="durationMs != null">duration_ms,</if>
            <if test="relativePath != null and relativePath != ''">relative_path,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="remark != null and remark != ''">remark,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="assetType != null and assetType != ''">#{assetType},</if>
            <if test="originalName != null and originalName != ''">#{originalName},</if>
            <if test="fileName != null and fileName != ''">#{fileName},</if>
            <if test="fileExt != null and fileExt != ''">#{fileExt},</if>
            <if test="mimeType != null and mimeType != ''">#{mimeType},</if>
            <if test="fileSize != null">#{fileSize},</if>
            <if test="durationMs != null">#{durationMs},</if>
            <if test="relativePath != null and relativePath != ''">#{relativePath},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updateSysMaterialAsset" parameterType="SysMaterialAsset">
        update sys_material_asset
        <trim prefix="set" suffixOverrides=",">
            <if test="originalName != null and originalName != ''">original_name = #{originalName},</if>
            <if test="fileExt != null and fileExt != ''">file_ext = #{fileExt},</if>
            <if test="mimeType != null and mimeType != ''">mime_type = #{mimeType},</if>
            <if test="fileSize != null">file_size = #{fileSize},</if>
            <if test="durationMs != null">duration_ms = #{durationMs},</if>
            <if test="relativePath != null and relativePath != ''">relative_path = #{relativePath},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            update_time = sysdate()
        </trim>
        where asset_id = #{assetId}
    </update>

    <delete id="deleteSysMaterialAssetById" parameterType="Long">
        delete from sys_material_asset where asset_id = #{assetId}
    </delete>

    <delete id="deleteSysMaterialAssetByIds" parameterType="Long">
        delete from sys_material_asset where asset_id in
        <foreach item="assetId" collection="array" open="(" separator="," close=")">
            #{assetId}
        </foreach>
    </delete>

</mapper>
