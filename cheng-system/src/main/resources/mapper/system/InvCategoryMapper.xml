<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.system.mapper.InvCategoryMapper">

    <resultMap type="InvCategory" id="InvCategoryResult">
        <result property="categoryId" column="category_id"/>
        <result property="categoryName" column="category_name"/>
        <result property="categoryCode" column="category_code"/>
        <result property="parentId" column="parent_id"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="status" column="status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectInvCategoryVo">
        select category_id, category_name, category_code, parent_id, sort_order, status, del_flag, create_by, create_time, update_by, update_time, remark from inv_category
    </sql>

    <select id="selectInvCategoryList" parameterType="InvCategory" resultMap="InvCategoryResult">
        <include refid="selectInvCategoryVo"/>
        <where>
            del_flag = '0'
            <if test="categoryName != null  and categoryName != ''"> and category_name like concat('%', #{categoryName}, '%')</if>
            <if test="categoryCode != null  and categoryCode != ''"> and category_code = #{categoryCode}</if>
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by parent_id, sort_order
    </select>

    <select id="selectInvCategoryByCategoryId" parameterType="Long" resultMap="InvCategoryResult">
        <include refid="selectInvCategoryVo"/>
        where category_id = #{categoryId}
    </select>

    <select id="selectUsedCategoryList" resultMap="InvCategoryResult">
        select distinct c.category_id, c.category_name, c.category_code, c.parent_id, c.sort_order, c.status, c.del_flag, c.create_by, c.create_time, c.update_by, c.update_time, c.remark
        from inv_category c
        inner join inv_item i on c.category_id = i.category_id
        where c.del_flag = '0'
        order by c.sort_order, c.category_id
    </select>

    <insert id="insertInvCategory" parameterType="InvCategory" useGeneratedKeys="true" keyProperty="categoryId">
        insert into inv_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="categoryName != null and categoryName != ''">category_name,</if>
            <if test="categoryCode != null and categoryCode != ''">category_code,</if>
            parent_id,
            <if test="sortOrder != null">sort_order,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="categoryName != null and categoryName != ''">#{categoryName},</if>
            <if test="categoryCode != null and categoryCode != ''">#{categoryCode},</if>
            0,
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateInvCategory" parameterType="InvCategory">
        update inv_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryName != null and categoryName != ''">category_name = #{categoryName},</if>
            <if test="categoryCode != null and categoryCode != ''">category_code = #{categoryCode},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where category_id = #{categoryId}
    </update>

    <update id="deleteInvCategoryByCategoryId" parameterType="Long">
        update inv_category set del_flag = '2' where category_id = #{categoryId}
    </update>

    <update id="deleteInvCategoryByCategoryIds" parameterType="String">
        update inv_category set del_flag = '2' where category_id in
        <foreach item="categoryId" collection="array" open="(" separator="," close=")">
            #{categoryId}
        </foreach>
    </update>

    <select id="selectChildrenCategoryById" parameterType="Long" resultMap="InvCategoryResult">
        select * from inv_category where find_in_set(#{categoryId}, ancestors)
    </select>

    <select id="checkCategoryNameUnique" parameterType="InvCategory" resultMap="InvCategoryResult">
        <include refid="selectInvCategoryVo"/>
        where category_name=#{categoryName} and parent_id = #{parentId} limit 1
    </select>

</mapper>
