    <delete id="deleteInvItemByItemId" parameterType="Long">
        delete from inv_item where item_id = #{itemId}
    </delete>

    <delete id="deleteInvItemByItemIds" parameterType="String">
        delete from inv_item where item_id in 
        <foreach item="itemId" collection="array" open="(" separator="," close=")">
            #{itemId}
        </foreach>
    </delete>

    <!-- 預約物品（使用樂觀鎖） -->
    <update id="reserveItem">
        UPDATE inv_stock 
        SET available_qty = CASE 
                WHEN available_qty >= #{quantity} THEN available_qty - #{quantity}
                ELSE available_qty
            END,
            reserved_qty = CASE 
                WHEN available_qty >= #{quantity} THEN reserved_qty + #{quantity}
                ELSE reserved_qty
            END,
            update_time = NOW()
        WHERE item_id = #{itemId}
          AND available_qty >= #{quantity}
    </update>
    
    <!-- 更新物品版本（用於樂觀鎖） -->
    <update id="updateItemVersion">
        UPDATE inv_item 
        SET version = version + 1,
            update_by = #{userId},
            update_time = NOW()
        WHERE item_id = #{itemId}
          AND version = #{version}
    </update>

    <!-- 批次查詢存在的物品編碼 -->
    <select id="selectExistingItemCodes" resultType="java.util.Map">
        SELECT item_id, item_code
        FROM inv_item
        WHERE del_flag = '0' AND item_code IN
        <foreach collection="itemCodes" item="code" open="(" separator="," close=")">
            #{code}
        </foreach>
    </select>

