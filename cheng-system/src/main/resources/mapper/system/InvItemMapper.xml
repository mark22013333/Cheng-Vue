        <result property="stockId"          column="stock_id"          />
        <result property="totalQuantity"    column="total_quantity"    />
        <result property="availableQty"     column="available_qty"     />
        <result property="borrowedQty"      column="borrowed_qty"      />
        <result property="reservedQty"      column="reserved_qty"      />
        <result property="damagedQty"       column="damaged_qty"       />
        <result property="lostQty"          column="lost_qty"          />
        <result property="lastInTime"       column="last_in_time"      />
        <result property="lastOutTime"      column="last_out_time"     />
        <result property="stockUpdateTime"  column="stock_update_time" />
        <result property="version"          column="version"           />
    </resultMap>

    <sql id="selectItemWithStockVo">
        select 
            i.item_id, i.item_code, i.item_name, i.category_id, c.category_name,
            i.barcode, i.qr_code, i.specification, i.unit, i.brand, i.model,
            i.purchase_price, i.current_price, i.supplier, i.min_stock, i.max_stock,
            i.location, i.description, i.image_url, i.status, i.remark, i.version,
            s.stock_id, s.total_quantity, s.available_qty, s.borrowed_qty,
            s.reserved_qty, s.damaged_qty, s.lost_qty, s.last_in_time, s.last_out_time,
            s.update_time as stock_update_time
        from inv_item i
        left join inv_category c on i.category_id = c.category_id
        left join inv_stock s on i.item_id = s.item_id
    </sql>

    <select id="selectItemWithStockList" parameterType="com.cheng.system.dto.InvItemWithStockDTO" resultMap="InvItemWithStockResult">
        <include refid="selectItemWithStockVo"/>
        <if test="tagId != null">
            INNER JOIN inv_item_tag_relation tr ON i.item_id = tr.item_id AND tr.tag_id = #{tagId}
        </if>
        <if test="tagName != null and tagName != ''">
            INNER JOIN inv_item_tag_relation tr2 ON i.item_id = tr2.item_id
            INNER JOIN sys_tag st ON tr2.tag_id = st.tag_id AND st.tag_name LIKE concat('%', #{tagName}, '%')
        </if>
        <where>
            i.del_flag = '0'
            <if test="itemCode != null and itemCode != ''"> and i.item_code like concat('%', #{itemCode}, '%')</if>
            <if test="itemName != null and itemName != ''"> and i.item_name like concat('%', #{itemName}, '%')</if>
            <if test="categoryId != null"> and i.category_id = #{categoryId}</if>
            <if test="brand != null and brand != ''"> and i.brand like concat('%', #{brand}, '%')</if>
            <if test="model != null and model != ''"> and i.model like concat('%', #{model}, '%')</if>
            <if test="supplier != null and supplier != ''"> and i.supplier like concat('%', #{supplier}, '%')</if>
            <if test="status != null and status != ''"> and i.status = #{status}</if>
            <if test="stockStatus != null and stockStatus != ''">
                <choose>
                    <!-- 無庫存：可用數量為 null 或 <= 0 -->
                    <when test='stockStatus.equals("2")'>
                        and (s.available_qty is null or s.available_qty &lt;= 0)
                    </when>
                    <!-- 低庫存：可用數量 > 0 且低於閾值 -->
                    <when test='stockStatus.equals("1")'>
                        and s.available_qty > 0
                        <choose>
                            <!-- 使用自訂閾值 -->
                            <when test="lowStockThreshold != null">
                                and s.available_qty &lt;= #{lowStockThreshold}
                            </when>
                            <!-- 使用物品的最低庫存設定 -->
                            <otherwise>
                                and i.min_stock is not null
                                and s.available_qty &lt;= i.min_stock
                            </otherwise>
                        </choose>
                    </when>
                    <!-- 正常：可用數量 > 0 且高於閾值 -->
                    <when test='stockStatus.equals("0")'>
                        and s.available_qty > 0
                        <choose>
                            <!-- 使用自訂閾值 -->
                            <when test="lowStockThreshold != null">
                                and s.available_qty > #{lowStockThreshold}
                            </when>
                            <!-- 使用物品的最低庫存設定，或無設定時所有 > 0 都算正常 -->
                            <otherwise>
                                and (i.min_stock is null or s.available_qty > i.min_stock)
                            </otherwise>
                        </choose>
                    </when>
                </choose>
            </if>
        </where>
        <choose>
            <when test="orderByColumn != null and orderByColumn != ''">
                order by 
                <choose>
                    <when test="orderByColumn == 'itemCode'">i.item_code</when>
                    <when test="orderByColumn == 'itemName'">i.item_name</when>
                    <when test="orderByColumn == 'location'">i.location</when>
                    <otherwise>i.create_time</otherwise>
                </choose>
                <choose>
                    <when test="isAsc == 'asc'">asc</when>
                    <otherwise>desc</otherwise>
                </choose>
            </when>
            <otherwise>
                order by i.create_time desc
            </otherwise>
        </choose>
    </select>

    <select id="selectItemWithStockByItemId" parameterType="Long" resultMap="InvItemWithStockResult">
        <include refid="selectItemWithStockVo"/>
        where i.item_id = #{itemId} and i.del_flag = '0'
    </select>

    <select id="selectLowStockItemWithStockList" resultMap="InvItemWithStockResult">
        <include refid="selectItemWithStockVo"/>
        where i.del_flag = '0'
          and s.total_quantity > 0
          and s.available_qty &lt;= i.min_stock
        order by s.available_qty asc, i.item_name asc
    </select>

