<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.system.mapper.InvBookInfoMapper">

    <resultMap type="InvBookInfo" id="InvBookInfoResult">
        <result property="bookInfoId" column="book_info_id"/>
        <result property="itemId" column="item_id"/>
        <result property="isbn" column="isbn"/>
        <result property="title" column="title"/>
        <result property="author" column="author"/>
        <result property="publisher" column="publisher"/>
        <result property="publishDate" column="publish_date"/>
        <result property="publishLocation" column="publish_location"/>
        <result property="language" column="language"/>
        <result property="edition" column="edition"/>
        <result property="binding" column="binding"/>
        <result property="classification" column="classification"/>
        <result property="coverImagePath" column="cover_image_path"/>
        <result property="introduction" column="introduction"/>
        <result property="sourceUrl" column="source_url"/>
        <result property="crawlTime" column="crawl_time"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectInvBookInfoVo">
        select book_info_id,
               item_id,
               isbn,
               title,
               author,
               publisher,
               publish_date,
               publish_location, language, edition, binding, classification, cover_image_path, introduction, source_url, crawl_time, status, create_by, create_time, update_by, update_time, remark
        from inv_book_info
    </sql>

    <select id="selectInvBookInfoList" parameterType="InvBookInfo" resultMap="InvBookInfoResult">
        <include refid="selectInvBookInfoVo"/>
        <where>
            <if test="isbn != null and isbn != ''">and isbn = #{isbn}</if>
            <if test="title != null and title != ''">and title like concat('%', #{title}, '%')</if>
            <if test="author != null and author != ''">and author like concat('%', #{author}, '%')</if>
            <if test="publisher != null and publisher != ''">and publisher like concat('%', #{publisher}, '%')</if>
            <if test="itemId != null">and item_id = #{itemId}</if>
            <if test="status != null and status != ''">and status = #{status}</if>
        </where>
        order by create_time desc
    </select>

    <select id="selectInvBookInfoByBookInfoId" parameterType="Long" resultMap="InvBookInfoResult">
        <include refid="selectInvBookInfoVo"/>
        where book_info_id = #{bookInfoId}
    </select>

    <select id="selectInvBookInfoByIsbn" parameterType="String" resultMap="InvBookInfoResult">
        <include refid="selectInvBookInfoVo"/>
        where isbn = #{isbn}
    </select>

    <select id="selectInvBookInfoByItemId" parameterType="Long" resultMap="InvBookInfoResult">
        <include refid="selectInvBookInfoVo"/>
        where item_id = #{itemId}
    </select>

    <insert id="insertInvBookInfo" parameterType="InvBookInfo" useGeneratedKeys="true" keyProperty="bookInfoId">
        insert into inv_book_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="itemId != null">item_id,</if>
            <if test="isbn != null and isbn != ''">isbn,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="author != null">author,</if>
            <if test="publisher != null">publisher,</if>
            <if test="publishDate != null">publish_date,</if>
            <if test="publishLocation != null">publish_location,</if>
            <if test="language != null">language,</if>
            <if test="edition != null">edition,</if>
            <if test="binding != null">binding,</if>
            <if test="classification != null">classification,</if>
            <if test="coverImagePath != null">cover_image_path,</if>
            <if test="introduction != null">introduction,</if>
            <if test="sourceUrl != null">source_url,</if>
            <if test="crawlTime != null">crawl_time,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="itemId != null">#{itemId},</if>
            <if test="isbn != null and isbn != ''">#{isbn},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="author != null">#{author},</if>
            <if test="publisher != null">#{publisher},</if>
            <if test="publishDate != null">#{publishDate},</if>
            <if test="publishLocation != null">#{publishLocation},</if>
            <if test="language != null">#{language},</if>
            <if test="edition != null">#{edition},</if>
            <if test="binding != null">#{binding},</if>
            <if test="classification != null">#{classification},</if>
            <if test="coverImagePath != null">#{coverImagePath},</if>
            <if test="introduction != null">#{introduction},</if>
            <if test="sourceUrl != null">#{sourceUrl},</if>
            <if test="crawlTime != null">#{crawlTime},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateInvBookInfo" parameterType="InvBookInfo">
        update inv_book_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="itemId != null">item_id = #{itemId},</if>
            <if test="isbn != null and isbn != ''">isbn = #{isbn},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="author != null">author = #{author},</if>
            <if test="publisher != null">publisher = #{publisher},</if>
            <if test="publishDate != null">publish_date = #{publishDate},</if>
            <if test="publishLocation != null">publish_location = #{publishLocation},</if>
            <if test="language != null">language = #{language},</if>
            <if test="edition != null">edition = #{edition},</if>
            <if test="binding != null">binding = #{binding},</if>
            <if test="classification != null">classification = #{classification},</if>
            <if test="coverImagePath != null">cover_image_path = #{coverImagePath},</if>
            <if test="introduction != null">introduction = #{introduction},</if>
            <if test="sourceUrl != null">source_url = #{sourceUrl},</if>
            <if test="crawlTime != null">crawl_time = #{crawlTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where book_info_id = #{bookInfoId}
    </update>

    <delete id="deleteInvBookInfoByBookInfoId" parameterType="Long">
        delete
        from inv_book_info
        where book_info_id = #{bookInfoId}
    </delete>

    <delete id="deleteInvBookInfoByBookInfoIds" parameterType="Long">
        delete from inv_book_info where book_info_id in
        <foreach item="bookInfoId" collection="array" open="(" separator="," close=")">
            #{bookInfoId}
        </foreach>
    </delete>
</mapper>
